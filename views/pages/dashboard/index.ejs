<%- include('../../partials/header') %>
<div class="container">
    <h1>Welcome, <%= user.firstName %>!</h1>
    
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-value"><%= stats.sessionsCompleted %></div>
            <div class="stat-label">Sessions Completed</div>
        </div>
        <div class="stat-card">
            <div class="stat-value"><%= stats.upcomingSessions %></div>
            <div class="stat-label">Upcoming Sessions</div>
        </div>
        <div class="stat-card">
            <div class="stat-value"><%= stats.pendingRequests %></div>
            <div class="stat-label">Pending Requests</div>
        </div>
        <div class="stat-card">
            <div class="stat-value"><%= unreadMessages %></div>
            <div class="stat-label">Unread Messages</div>
        </div>
    </div>

    <div class="dashboard-grid">
        <div class="card">
            <h2>Recent Sessions</h2>
            <% if (sessions.length > 0) { %>
                <ul class="session-list">
                    <% sessions.forEach(s => { %>
                        <li class="session-item">
                            <strong><%= s.skill %></strong>
                            <span class="badge badge-<%= s.status %>"><%= s.status %></span>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No sessions yet. <a href="/explore">Find a tutor</a></p>
            <% } %>
        </div>

        <div class="card">
            <h2>Quick Actions</h2>
            <div class="quick-actions">
                <a href="/explore" class="btn btn-outline">Find Tutors</a>
                <a href="/profile/edit" class="btn btn-outline">Edit Profile</a>
                <a href="/sessions" class="btn btn-outline">View Sessions</a>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer') %>
