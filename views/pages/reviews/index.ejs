<%- include('../../partials/header') %>
<div class="container">
    <h1>Reviews</h1>
    <% if (reviews.length > 0) { %>
        <div class="reviews-list">
            <% reviews.forEach(review => { %>
                <div class="review-card">
                    <div class="review-header">
                        <strong><%= review.reviewer.firstName %></strong> → <strong><%= review.reviewee.firstName %></strong>
                        <div class="rating">
                            <% for(let i = 0; i < review.rating; i++) { %>⭐<% } %>
                        </div>
                    </div>
                    <p><%= review.comment %></p>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p>No reviews yet.</p>
    <% } %>
</div>
<%- include('../../partials/footer') %>
