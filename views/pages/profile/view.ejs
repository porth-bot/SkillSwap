<%- include('../../partials/header') %>
<div class="container">
    <div class="profile-header">
        <div class="profile-avatar"><%= profile.firstName.charAt(0) %><%= profile.lastName.charAt(0) %></div>
        <div class="profile-info">
            <h1><%= profile.firstName %> <%= profile.lastName %></h1>
            <p>Grade <%= profile.grade %></p>
            <% if (profile.bio) { %><p><%= profile.bio %></p><% } %>
        </div>
        <% if (isOwnProfile) { %>
            <a href="/profile/edit" class="btn btn-outline">Edit Profile</a>
        <% } else { %>
            <a href="/sessions/request/<%= profile._id %>" class="btn btn-primary">Request Session</a>
            <a href="/messages/<%= profile._id %>" class="btn btn-outline">Message</a>
        <% } %>
    </div>

    <div class="profile-content">
        <div class="card">
            <h2>Skills Offered</h2>
            <% if (profile.skillsOffered && profile.skillsOffered.length > 0) { %>
                <div class="skills-list">
                    <% profile.skillsOffered.forEach(skill => { %>
                        <div class="skill-item">
                            <strong><%= skill.name %></strong>
                            <span class="badge"><%= skill.proficiencyLevel %></span>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p>No skills listed yet.</p>
            <% } %>
        </div>

        <div class="card">
            <h2>Skills Wanted</h2>
            <% if (profile.skillsSought && profile.skillsSought.length > 0) { %>
                <div class="skills-list">
                    <% profile.skillsSought.forEach(skill => { %>
                        <div class="skill-item"><%= skill.name %></div>
                    <% }) %>
                </div>
            <% } else { %>
                <p>No skills listed yet.</p>
            <% } %>
        </div>
    </div>
</div>
<%- include('../../partials/footer') %>
