<%- include('../../partials/header') %>
<div class="container">
    <h1>Manage Users</h1>
    <table class="table">
        <thead><tr><th>Name</th><th>Email</th><th>Role</th><th>Status</th><th>Actions</th></tr></thead>
        <tbody>
            <% users.forEach(u => { %>
                <tr>
                    <td><%= u.firstName %> <%= u.lastName %></td>
                    <td><%= u.email %></td>
                    <td><%= u.role %></td>
                    <td><%= u.isActive ? 'Active' : 'Inactive' %></td>
                    <td>
                        <form method="POST" action="/admin/users/<%= u._id %>/toggle" style="display:inline">
                            <button class="btn btn-sm"><%= u.isActive ? 'Deactivate' : 'Activate' %></button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer') %>
