<%- include('../../partials/header') %>
<div class="container">
    <h1>Manage Sessions</h1>
    <table class="table">
        <thead><tr><th>Skill</th><th>Tutor</th><th>Student</th><th>Status</th><th>Date</th></tr></thead>
        <tbody>
            <% sessions.forEach(s => { %>
                <tr>
                    <td><%= s.skill %></td>
                    <td><%= s.tutor.firstName %></td>
                    <td><%= s.student.firstName %></td>
                    <td><span class="badge badge-<%= s.status %>"><%= s.status %></span></td>
                    <td><%= new Date(s.createdAt).toLocaleDateString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer') %>
