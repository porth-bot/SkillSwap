<%- include('../../partials/header') %>
<div class="container">
    <h1>Manage Reviews</h1>
    <table class="table">
        <thead><tr><th>From</th><th>To</th><th>Rating</th><th>Comment</th><th>Date</th></tr></thead>
        <tbody>
            <% reviews.forEach(r => { %>
                <tr>
                    <td><%= r.reviewer.firstName %></td>
                    <td><%= r.reviewee.firstName %></td>
                    <td><% for(let i=0;i<r.rating;i++){%>‚≠ê<%}%></td>
                    <td><%= r.comment.substring(0,50) %>...</td>
                    <td><%= new Date(r.createdAt).toLocaleDateString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer') %>
