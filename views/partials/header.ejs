<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'SkillSwap' %> | SkillSwap</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">âš¡ SkillSwap</a>
            <div class="nav-links">
                <a href="/explore">Find Tutors</a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard">Dashboard</a>
                    <a href="/sessions">Sessions</a>
                    <a href="/messages">Messages</a>
                    <% if (user.role === 'admin') { %>
                        <a href="/admin">Admin</a>
                    <% } %>
                    <a href="/profile"><%= user.firstName %></a>
                    <a href="/auth/logout">Logout</a>
                <% } else { %>
                    <a href="/auth/login">Login</a>
                    <a href="/auth/register" class="btn btn-primary">Sign Up</a>
                <% } %>
            </div>
        </div>
    </nav>
    <% if (typeof success !== 'undefined' && success && success.length) { %>
        <div class="container"><div class="alert alert-success"><%= success %></div></div>
    <% } %>
    <% if (typeof error !== 'undefined' && error && error.length) { %>
        <div class="container"><div class="alert alert-error"><%= error %></div></div>
    <% } %>
