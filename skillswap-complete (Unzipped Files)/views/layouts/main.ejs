<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="SkillSwap - Student Talent Exchange Platform. Share your skills, learn from peers, grow together.">
    <meta name="keywords" content="skill sharing, tutoring, students, learning, education, peer learning">
    <meta name="author" content="SkillSwap Team - Wayzata High School">
    
    <title><%= typeof title !== 'undefined' ? title + ' | ' : '' %>SkillSwap</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    
    <!-- Fonts - Distinctive typography choices -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;9..40,500;9..40,600;9..40,700&family=Fraunces:opsz,wght@9..144,400;9..144,500;9..144,600;9..144,700&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Page-specific styles -->
    <% if (typeof pageStyles !== 'undefined') { %>
        <% pageStyles.forEach(style => { %>
            <link rel="stylesheet" href="/css/<%= style %>.css">
        <% }); %>
    <% } %>
</head>
<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">
    <!-- Skip to main content for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <!-- Flash Messages -->
    <div class="flash-container" id="flash-container">
        <% if (success && success.length > 0) { %>
            <% success.forEach(msg => { %>
                <div class="flash flash-success" role="alert">
                    <i class="fas fa-check-circle"></i>
                    <span><%= msg %></span>
                    <button class="flash-close" aria-label="Close">&times;</button>
                </div>
            <% }); %>
        <% } %>
        <% if (error && error.length > 0) { %>
            <% error.forEach(msg => { %>
                <div class="flash flash-error" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <span><%= msg %></span>
                    <button class="flash-close" aria-label="Close">&times;</button>
                </div>
            <% }); %>
        <% } %>
        <% if (typeof info !== 'undefined' && info && info.length > 0) { %>
            <% info.forEach(msg => { %>
                <div class="flash flash-info" role="alert">
                    <i class="fas fa-info-circle"></i>
                    <span><%= msg %></span>
                    <button class="flash-close" aria-label="Close">&times;</button>
                </div>
            <% }); %>
        <% } %>
        <% if (typeof warning !== 'undefined' && warning && warning.length > 0) { %>
            <% warning.forEach(msg => { %>
                <div class="flash flash-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span><%= msg %></span>
                    <button class="flash-close" aria-label="Close">&times;</button>
                </div>
            <% }); %>
        <% } %>
    </div>
    
    <!-- Navigation -->
    <%- include('../partials/navbar') %>
    
    <!-- Main Content -->
    <main id="main-content" class="main-content">
        <%- body %>
    </main>
    
    <!-- Footer -->
    <%- include('../partials/footer') %>
    
    <!-- Mobile Menu Overlay -->
    <div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>
    
    <!-- Core Scripts -->
    <script src="/js/main.js"></script>
    
    <!-- Page-specific scripts -->
    <% if (typeof pageScripts !== 'undefined') { %>
        <% pageScripts.forEach(script => { %>
            <script src="/js/<%= script %>.js"></script>
        <% }); %>
    <% } %>
    
    <!-- Inline script for current user data -->
    <% if (typeof user !== 'undefined' && user) { %>
    <script>
        window.currentUser = {
            id: '<%= user._id %>',
            username: '<%= user.username %>',
            role: '<%= user.role %>'
        };
    </script>
    <% } %>
</body>
</html>
