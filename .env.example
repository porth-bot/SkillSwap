# SkillSwap Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Connection (Use MongoDB Atlas for cloud-based hosting)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/skillswap?retryWrites=true&w=majority

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production-minimum-32-chars
SESSION_NAME=skillswap_session

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key!
JWT_SECRET=your-jwt-secret-key-for-tokens

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Application Info (Required for BPA Competition)
SCHOOL_NAME=Wayzata High School
CHAPTER_NAME=Wayzata BPA Chapter
CITY=Plymouth
STATE=Minnesota
YEAR=2026
TEAM_MEMBERS=Team Member 1, Team Member 2
